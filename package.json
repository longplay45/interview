{
  "name": "interview",
  "version": "0.1.0",
  "description": "Source code of the front and -backend for the [interview] app",
  "scripts": {
    "delete:staticfiles": "rimraf frontend/dist/",
    "copy:devdb": "copyfiles --flat data/data.json frontend/dev",
    "copy:robots": "copyfiles --flat robots.txt frontend/dev",
    "parcel:dev": "parcel frontend/src/index.html --dist-dir frontend/dev/",
    "parcel:build": "parcel build frontend/src/index.html --no-source-maps --dist-dir frontend/dist/",
    "frontend:dev": "npm run copy:devdb && npm run parcel:dev",
    "frontend:build": "npm run delete:staticfiles && npm run parcel:build && npm run copy:robots",
    "backend:dev": "cd backend && python server.py --reload True",
    "deploy": "bash deploy.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/netzwerkerei/interview.git"
  },
  "author": "netzwerkerei@gmail.com",
  "license": "Copyleft /-right netzwerkerei@gmail.com 2023",
  "devDependencies": {
    "@parcel/optimizer-data-url": "^2.9.3",
    "@parcel/transformer-inline-string": "^2.9.3",
    "@parcel/transformer-sass": "^2.9.3",
    "copyfiles": "^2.4.1",
    "parcel": "^2.9.3",
    "rimraf": "^5.0.1"
  },
  "dependencies": {
    "fuse.js": "^6.6.2"
  }
}
